@using Copyleaks.SDK.V3.API.Models.Types;
@model Copyleaks.SDK.Demo.Models.Responses.CheckResultsResponse
@{
    ViewData["Title"] = "Copyleaks API test";
}

<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Step3: Check results
            </div>
            <div class="panel-body">
                <form action="/@Model.ScanId/checkResult" method="post">
                    <button class="btn btn-primary" type="Submit" style="margin-top: 30px;">Check results</button>
                </form>

                @if (Model != null && Model.CompletedCallback != null)
                {
                    @if (Model.CompletedCallback.Status == eScanStatus.Error)
                    {
                        <div class="error-message">
                            <h4>Process failed</h4>
                            @Model.CompletedCallback.Error.Message
                            <div>
                                Copyleaks error code: @Model.CompletedCallback.Error.Code
                            </div>
                        </div>

                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Copied Words
                                    </th>
                                    <th>
                                        Comparison report
                                    </th>
                                    <th>
                                        Suspected result
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var result in @Model.CompletedCallback.Results.Internet)
                                {
                                    <tr>
                                        <td>
                                            @result.Title
                                        </td>
                                        <td>
                                            @result.MatchedWords
                                        </td>
                                        <td>
                                            <a href="@result.Comparison">Download comparison report</a>
                                        </td>
                                        <td>
                                            <a href="@result.Url">
                                                Suspected text
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                }
                else if (Model != null && Model.ScanId != null)
                {
                    <div class="waiting-message">
                        <h4>Still processing, click <i>check results</i> to refresh</h4>
                    </div>

                }
            </div>
        </div>
    </div>

</div>
